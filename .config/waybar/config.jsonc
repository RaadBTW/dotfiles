	"interval": 1,
    //"format": "ï€— {:%I:%M %p}", // AM PM format
    "format": "ï€— {:%H:%M:%S}", // 24H
	"format-alt": "ï€— {:L%H:%M  ï³ %Y, %d %B, %A}",
	"tooltip-format": "<tt><small>{calendar}</small></tt>",
	"calendar": {
		"mode": "year",
		"mode-mon-col": 3,
		"weeks-pos": "right",
		"on-scroll": 1,
